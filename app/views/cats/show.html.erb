<h1><%= @cat.name %>'s Page</h1>

  <section>

    <h2>Bio</h2>

    <table>
      <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Sex</th>
        <th>Age</th>
        <th>Description</th>
      </tr>
      <tr>
        <td><%= @cat.name %></td>
        <td><%= @cat.color %></td>
        <td><%= @cat.sex %></td>
        <td><%= @cat.age %></td>
        <td><%= @cat.description %></td>
      </tr>
    </table>
  </section>

  <br>

  <section>

    <h2>Rental Reservations</h2>

    <table>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
      <% @cat.cat_rental_requests.order("start_date").each do |request| %>
        <tr>
          <td><%= request.start_date %></td>
          <td><%= request.end_date %></td>
        </tr>
      <% end %>
    </table>
  </section>

  <br>

  <%= link_to "Cats Home", cats_url %>
  <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat.id) %>
