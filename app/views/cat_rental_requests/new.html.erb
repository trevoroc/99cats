<h1>Rental Request for Cat</h1>

<section>

  <form action="<%= cat_rental_requests_url %>" method="post">

    <label for="cat">Choose a cat to rent: </label>
    <select id="cat" name="rental[cat_id]">
      <option selected disabled>Select a Cat</option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>

    <br>

    <label for="start_date">Start Date</label>
    <input type="date" id ="start_date" name="rental[start_date]">

    <br>

    <label for="end_date">End Date</label>
    <input type="date" id ="end_date" name="rental[end_date]">

    <br>

    <input type="submit" value="Request rental">

  </form>

</section>
